{% set seriesNotes = collections | getSeriesNotes(series) %}
{% set currentIndex = seriesNotes | findSeriesIndex(page.url) %}

{% if currentIndex >= 0 and seriesNotes.length > 1 %}
<nav class="mt-12 pt-8 border-t border-border">
  <div class="grid grid-cols-2 gap-4">
    <div class="text-left">
      {% if currentIndex > 0 %}
      {% set prevNote = seriesNotes[currentIndex - 1] %}
      <span class="block text-xs text-text-muted mb-1">Previous in series</span>
      <a href="{{ prevNote.url }}" class="text-accent-400 hover:text-accent-600 transition-colors">
        &larr; {{ prevNote.data.title }}
      </a>
      {% endif %}
    </div>
    <div class="text-right">
      {% if currentIndex < seriesNotes.length - 1 %}
      {% set nextNote = seriesNotes[currentIndex + 1] %}
      <span class="block text-xs text-text-muted mb-1">Next in series</span>
      <a href="{{ nextNote.url }}" class="text-accent-400 hover:text-accent-600 transition-colors">
        {{ nextNote.data.title }} &rarr;
      </a>
      {% endif %}
    </div>
  </div>
</nav>
{% endif %}
