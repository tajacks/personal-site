---
pagination:
  data: allSeries
  size: 1
  alias: seriesItem
permalink: /series/{{ seriesItem.slug }}/
layout: base.njk
eleventyComputed:
  title: "{{ seriesItem.title }}"
---
<div class="container-narrow">
  <nav class="text-sm text-text-muted mb-6">
    <a href="/notes/" class="hover:text-text-secondary transition-colors">&larr; Back to notes</a>
  </nav>

  <header class="mb-8">
    <span class="inline-block px-2 py-0.5 text-xs font-medium rounded bg-accent-500/20 text-accent-400 mb-2">Series</span>
    <h1 class="text-3xl font-bold text-text-primary mb-3">{{ seriesItem.title }}</h1>
    {% if seriesItem.description %}
    <p class="text-text-secondary">{{ seriesItem.description }}</p>
    {% endif %}
  </header>

  {% set seriesNotes = collections | getSeriesNotes(seriesItem.slug) %}
  <ol class="space-y-4">
    {% for note in seriesNotes %}
    <li class="flex items-start gap-4 p-4 border-l-2 border-border hover:border-accent-400 transition-colors">
      <span class="flex-shrink-0 w-8 h-8 rounded-full bg-bg-tertiary text-text-muted flex items-center justify-center font-semibold">{{ loop.index }}</span>
      <div>
        <a href="{{ note.url }}" class="text-text-secondary hover:text-accent-400 transition-colors font-medium">
          {{ note.data.title }}
        </a>
        {% if note.data.description %}
        <p class="text-sm text-text-muted mt-1">{{ note.data.description }}</p>
        {% endif %}
      </div>
    </li>
    {% endfor %}
  </ol>
</div>
